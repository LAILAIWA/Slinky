<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray">

    <FrameLayout
        android:id="@+id/fragment_inform_add_flayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fragment_inform_add_iv1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_rounded"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:stretchColumns="*">
            <TableRow>
                <Space
                    android:layout_height="20dp"/>
            </TableRow>
            <TableRow>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_inform_add_approval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="新通知"
                        android:textColor="@color/colorBlack"
                        android:textSize="40sp"
                        />
                </RelativeLayout>
            </TableRow>
            <TableRow>

                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBlack"
                    android:id="@+id/fragment_inform_add_divider"
                    style="@style/my_page_item_divider"
                    android:layout_alignParentBottom="true"/>
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_inform_add_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="标题:"
                        android:textColor="@color/colorBlack"
                        android:textSize="25sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="请输入通知标题"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_inform_add_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="内容:"
                        android:textColor="@color/colorBlack"
                        android:textSize="25sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:minLines="8"
                            android:freezesText="true"
                            android:inputType="textMultiLine"
                            android:gravity="left|top"
                            android:scrollbars="vertical"
                            android:background="@drawable/corners_btn_black"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <Button
                            android:id="@+id/fragment_inform_add_btn_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="清空"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:background="@drawable/corners_btn_black"/>
                        <Button
                            android:id="@+id/fragment_inform_add_btn_release"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:text="发布"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:background="@drawable/corners_btn_black"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <Space
                    android:layout_height="20dp"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>
</LinearLayout>