<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/club_first"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_rounded"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TableRow>
                <Space
                    android:layout_height="20dp"/>
            </TableRow>
            <TableRow>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_info_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="社团名:"
                        android:textColor="@color/colorBlack"
                        android:textSize="30sp"
                        />
                    <EditText
                        android:id="@+id/fragment_info_club_realname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/fragment_info_club_name"
                        android:layout_marginLeft="20dp"
                        android:inputType="text"
                        android:hint="社团名" />
                </RelativeLayout>
            </TableRow>
            <TableRow>
                <Space
                    android:layout_height="20dp"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/club_second"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_rounded"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <TableRow>
                <RelativeLayout>
                    <TextView
                        android:id="@+id/fragment_info_club_infoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="简介:"
                        android:textColor="@color/colorBlack"
                        android:textSize="30sp"/>
                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/fragment_info_sv"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toEndOf="@id/fragment_info_club_infoc"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/corners_black"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        <EditText
                            android:id="@+id/fragment_info_club_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:inputType="text"
                            android:hint="社团简介"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"/>
                    </android.support.v4.widget.NestedScrollView>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/fragment_info_club_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:text="更改信息"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:background="@drawable/corners_btn_black"/>
            </TableRow>
            <TableRow>
                <Space
                    android:layout_height="60dp"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>

</LinearLayout>