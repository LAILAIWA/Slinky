<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_inform_adapter_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:lines="2"
            android:textSize="20sp"
            android:text="社团通知"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/item_inform_adapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_inform_adapter_tv"
            android:layout_marginStart="50dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="通知标题"
            android:textSize="14sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/item_inform_adapter_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_below="@id/item_inform_adapter_title"
            android:layout_marginBottom="4dp"
            android:text="社团"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
