<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ImageView
            android:id="@+id/club_inform_version_bg1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_rounded"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/club_inform_version_tv_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="通知"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/club_inform_version_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_inform_version_tv_inform"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:text="标题:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/club_inform_version_et_realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/club_inform_version_tv_name"
                android:layout_alignTop="@id/club_inform_version_tv_name"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                />
            <TextView
                android:id="@+id/club_inform_version_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_inform_version_tv_name"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:text="内容:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/club_inform_version_et_realcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/club_inform_version_tv_content"
                android:layout_alignTop="@id/club_inform_version_tv_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                android:minLines="2"
                android:freezesText="true"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:scrollbars="vertical"
                />
            <Button
                android:id="@+id/club_inform_version_btn_update"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@id/club_inform_version_et_realname"
                android:text="更改"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:background="@drawable/corners_btn_black"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>