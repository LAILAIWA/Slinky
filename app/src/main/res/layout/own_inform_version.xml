<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ImageView
            android:id="@+id/own_inform_version_bg1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_rounded"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/own_inform_version_tv_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="通知"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/own_inform_version_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/own_inform_version_tv_inform"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:text="标题:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/own_inform_version_tv_realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/own_inform_version_tv_name"
                android:layout_alignTop="@id/own_inform_version_tv_name"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                android:text="内容:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/own_inform_version_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/own_inform_version_tv_name"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:text="内容:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/own_inform_version_tv_realcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/own_inform_version_tv_content"
                android:layout_alignTop="@id/own_inform_version_tv_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                android:text="内容:"
                android:textSize="20sp" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>